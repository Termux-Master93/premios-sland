---
interface Props {
    img: string;
}
const { img } = Astro.props;
---

<div
    style=`background-image: url(${img}); clip-path: polygon(0 0, 100% 0, 100% 85%, 50% 100%, 50% 100%, 0 85%)`
    class="relative bg-no-repeat bg-cover cp-v h-[90vh] w-full max-w-[100vw]"
>
    <div class="absolute inset-0 m-auto w-full h-full flex justify-center justify-items-center flex-col items-center">
        <slot />
    </div>
</div>
